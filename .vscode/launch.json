    "version": "0.2.0",
    "configurations": [
    {
        "command": "npm run dev",
        "name": "Run npm start",
        "request": "launch",
        "type": "node-terminal",
        "cwd": "${workspaceFolder}/frontend"
    },
        {
            "name": "Run backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port",
                "5000",
                "--host",
                "127.0.0.1",
                "--debug",
                "--reload"
            ],
            "preLaunchTask": "loadenv",
            "jinja": true,
            "justMyCode": true
        }
    ]
}